<ListItemWithCheckbox>:

    IconLeftWidget:
        icon: root.icon

windowManager: 
    MainPage:
        name: "Main"
        
        MDBoxLayout:
            orientation: 'vertical'

            MDToolbar:
                title: "Our Top Toolbar"
                left_action_items: [["menu"]]
                right_action_items: [["coffee"]]

            ScrollView:

                MDList:
                    id: scroll
                    
        MDBottomAppBar:
                MDToolbar:
                    icon: 'plus'
                    left_action_items: [["menu", lambda x: app.presser()]]
                    title: "Bottom Menu"
                    type: 'bottom'
                    mode: 'center'

                    # Click The Button
                    on_action_button: app.presser()
                    
                 
    AddPage:
        name: "Add"
        
        MDLabel:
                id: my_label
                text: "Some Stuff"
                halign: "center"